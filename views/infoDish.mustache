      crossorigin="anonymous"
    ></script>
    <!--Bootstrap template from CDN Bootstrap-->

    <!-- Library for stars rating in Reviews -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- Library for stars rating in Reviews -->

    <!-- Our JS file -->
    <script src="../main.js" type="module"></script>
    <!-- Our JS file -->
  </head>
  <body>
    <div id="Header" class="row">
      <div id="Restaurant_Name" class="col-xs-6">
        <h1>Miss & Mister Aguacate</h1>
        <!--Restaurant Name-->
      </div>

      <div class="flex-gap">
        <div id="Insta" class="col-xs-2">
          <a href="https://www.instagram.com/" target="_blank">
            <img class="Social img-responsive" src="../Iconos/insta.png" />
            <!--Link to Instagram-->
          </a>
        </div>
        <div id="Facebook" class="col-xs-2">
          <a href="https://es-es.facebook.com/" target="_blank">
            <img class="Social img-responsive" src="../Iconos/facebook.png" />
            <!--Link to Facebook-->
          </a>
        </div>
        <div id="Twitter" class="col-xs-2">
          <a href="https://twitter.com/?lang=es" target="_blank">
            <img class="Social img-responsive" src="../Iconos/twitter.png" />
            <!--Link to Twitter-->
          </a>
        </div>
      </div>
    </div>
    <!--Header from the page-->

    <div id="InfoDish" class="container-fluid">
      <div class="row">
        <div id="InfoArrow" class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <button id="InfoDishArrow" onclick="window.location.href='/menu'">
            <img
              class="arrow-button img-responsive"
              src="../Iconos/BackArrow.png"
            />
          </button>
        </div>
        <div id="InfoPhoto" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
          <img
            id="InfodishImage"
            class="dish-image img-responsive"
            src=../{{dish.img}}
          />
        </div>

        <div id="DishAtributes" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
          <h4 id="infoDishName">{{dish.name}}</h4>
          <p id="infoDishPrice">{{dish.price}}</p>
          <p id="infoDishDescription">{{dish.description}}</p>
        </div>
        <!--It will be updated when the user enter with a dish-->
      </div>

      <div id="ButtonsRow" class="row">
        <div class="InfoButtons col-xs-1">
          <button id="DeleteButton" onclick="window.location.href='/menu'">Borrar</button>
        </div>
        <div class="InfoButtons col-xs-1">
          <button id="ModifyButton" onclick="window.location.href='/infoDish/{{dish.id}}/form'">Modificar</button>
        </div>
      </div>
      <div id="InfoIngredientTitle">
        <h2>Ingredientes</h2>
      </div>

      <div class="row">
        <div
          id="infoDishIngredientsList"
          class="col-xs-6 col-sm-6 col-md-6 col-lg-6"
        >
          {{#ingredients}}
          <p>{{.}}</p>
          {{/ingredients}}
          {{^ingredients}}
          <p>No hay ingredientes</p>
          {{/ingredients}}
        </div>
      </div>
    </div>
    <!--More info page-->

    <div id="Footer" class="row">
      <div id="ContactInfo" class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <p>
            <img src="../Iconos/Reloj.png" /> Horario: Lunes a Viernes 12:00 -
            01:00
          </p>
          <p>
            <img src="../Iconos/Correo.png" /> Contacto:
            missandmisteraguacate@gmail.com
          </p>
          <p><img src="../Iconos/Telefono.png" /> Tel√©fono: +34 910 00 00 00</p>
          <p><img src="../Iconos/Mapa.png" /> Calle: Las Antenas, 21 45631</p>
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <div>
            <iframe
              id="Map"
              src="https://maps.google.com/maps?q=40.153524,%20-4.743002&t=&z=13&ie=UTF8&iwloc=&output=embed"
              frameborder="0"
            ></iframe>
          </div>
        </div>
      </div>
      <div id="Copyright" class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <p>
            &copy; Design by Miguel y Demelza <img src="../Iconos/corazon.png" />
          </p>
        </div>
      </div>
    </div>
    <!--Footer from the page-->
  </body>
</html>
