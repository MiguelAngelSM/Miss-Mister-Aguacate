  <body>
    <!--Header from the page-->
    <div id="Header" class="row">
      <div id="Restaurant_Name" class="col-xs-6">
        <h1>Miss & Mister Aguacate</h1>
        <!--Restaurant Name-->
      </div>

      <div class="flex-gap">
        <div id="Insta" class="col-xs-2">
          <a href="https://www.instagram.com/" target="_blank">
            <img class="social img-responsive" src="../Iconos/insta.png" />
            <!--Link to Instagram-->
          </a>
        </div>
        <div id="Facebook" class="col-xs-2">
          <a href="https://es-es.facebook.com/" target="_blank">
            <img class="social img-responsive" src="../Iconos/facebook.png" />
            <!--Link to Facebook-->
          </a>
        </div>
        <div id="Twitter" class="col-xs-2">
          <a href="https://twitter.com/?lang=es" target="_blank">
            <img class="social img-responsive" src="../Iconos/twitter.png" />
            <!--Link to Twitter-->
          </a>
        </div>
      </div>
    </div>
    <!--This is a display just decorative-->
    <div id="Display" class="row">
      <!--It will change between the following pictures every 5 seconds-->
      <img class="photo" src="../Imagenes/Cartel.jpg" />
      <img class="photo" src="../Imagenes/Amigos.jpg" />
      <img class="photo" src="../Imagenes/Mesa.jpg" />
      <img class="photo" src="../Imagenes/Sitio.jpg" />
    </div>
    <!--Header of the menu-->
    <div id="Head" class="row">
      <!--Default mode is Normal mode-->

      <div id="OptionButton1" class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <button
          id="ModeLeft"
          class="menuButton"
          onclick="window.location.href='/menu/Vegano'"
        >
          <img
            id="ImageModeLeft"
            class="menu-header-button img-responsive"
            src="../Iconos/Vegano.png"
          />
        </button>
        <!--Vegan Button is loaded by default-->
      </div>

      <div id="MenuTitle" class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <h1>Menú</h1>
      </div>

      <div id="OptionButton2" class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <button
          id="ModeRight"
          class="menuButton"
          onclick="window.location.href='/menu/Bebida'"
        >
          <img
            id="ImageModeRight"
            class="menu-header-button img-responsive"
            src="../Iconos/Bebida.png"
          />
        </button>
        <!--Drink Button is loadedby default-->
      </div>
    </div>
    <!--List of dishes-->
    <div id="Dishes">
      {{#dishes}}
      <div class="row dish {{ type }}">
        <div id="Image" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <img src="../{{ img }}" class="dish-image img-responsive" />
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <div class="row">
            <div
              id="Name"
              class="dishProperties col-xs-8 col-sm-8 col-md-8 col-lg-8"
            >
              {{ name }}
            </div>
            <div
              id="Price"
              class="dishProperties col-xs-4 col-sm-4 col-md-4 col-lg-4"
            >
              {{ price }}€
            </div>
          </div>
          <div class="row">
            <div id="Info" class="showInfo col-12">
              <button
                class="infoButton"
                onclick="window.location.href='/infoDish/{{ id }}?type={{type}}'"
              >
                Más Info
              </button>
            </div>
          </div>
        </div>
      </div>
      {{/dishes}}
      {{^dishes}}
      <h3>No hay platos del modo {{typeReturnPage}}</h3>
      {{/dishes}}
    </div>
    <!--Change page and addDish buttons-->
    <div id="LowButtons" class="row">
      <div class="ajaxButton col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <button
          id="BackArrow"
          class="arrow-button"
          onclick="changePage('{{ typeReturnPage }}',-1)"
        >
          <img
            class="ajaxImages img-responsive"
            src="../Iconos/BackArrow.png"
          />
        </button>
      </div>

      <div class="ajaxButton col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <button
          id="NewDishButton"
          class="infoButton"
          onclick="window.location.href='/create?type={{ typeReturnPage }}'"
        >
          Añadir Plato
        </button>
      </div>

      <div class="ajaxButtons col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <button
          id="NextArrow"
          class="arrow-button"
          onclick="changePage('{{ typeReturnPage }}',1)"
        >
          <img
            class="ajaxImages img-responsive"
            src="../Iconos/NextArrow.png"
          />
        </button>
      </div>
    </div>
    <!--Reviews Section; it does not work just only see some-->
