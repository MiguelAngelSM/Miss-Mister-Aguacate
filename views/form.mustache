  <body>
    <!--Header from the page-->
    <div id="Header" class="row">
      <div id="Restaurant_Name" class="col-xs-6">
        <h1>Miss & Mister Aguacate</h1>
        <!--Restaurant Name-->
      </div>

      <div class="flex-gap">
        <div id="Insta" class="col-xs-2">
          <a href="https://www.instagram.com/" target="_blank">
            <img class="social img-responsive" src="../../Iconos/insta.png" />
            <!--Link to Instagram-->
          </a>
        </div>
        <div id="Facebook" class="col-xs-2">
          <a href="https://es-es.facebook.com/" target="_blank">
            <img
              class="social img-responsive"
              src="../../Iconos/facebook.png"
            />
            <!--Link to Facebook-->
          </a>
        </div>
        <div id="Twitter" class="col-xs-2">
          <a href="https://twitter.com/?lang=es" target="_blank">
            <img class="social img-responsive" src="../../Iconos/twitter.png" />
            <!--Link to Twitter-->
          </a>
        </div>
      </div>
    </div>
    <!--Modify and create form page-->
    <div id="Form" class="container-fluid">
      <form role="form" action="/dish/saved" method="post" enctype="multipart/form-data">
        <!--This inputs are for getting useful info that does not need to be shown-->
        <div style="display: none">
          <input name="id" value="{{ dish.id }}" />
          <input id="ActualType" name="actual_type" value="{{ dish.type }}" />
        </div>
        <!--This div is where the form is-->
        <div class="formStructure row">
          <!--This div is where images are (it could be the image or the input for loading it)-->
          <div id="FormPhoto" class="col-xs-3">
            <!--This input is for the new dish option in order to let the user get an image from its own desktop-->
            <input
              id="AddImage"
              name="imageForm"
              type="file"
              style="display: none"
              accept="image/png, image/jpeg"
            />

            <!--This image is for the modify dish option in order to print the image from the dish that is being modified-->
            <img
              id="FormImage"
              class="dish-image img-responsive"
              src="../../{{ dish.img }}"
            />
          </div>

          <div id="BasicForm" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <!--This div is where input for the name is-->
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="Name">Nombre:</label>
              <input
                id="Name"
                name="name"
                class="form-control"
                type="text"
                value="{{ dish.name }}"
              />
            </div>
            <!--This div is where input for the price is-->
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="Price">Precio:</label>
              <input
                id="Price"
                name="price"
                class="form-control"
                type="text"
                value="{{ dish.price }}"
              />
            </div>
            <!--This div is where input for the description is-->
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="Description">Descripción:</label>
              <textArea
                id="Description"
                name="description"
                class="form-control"
                type="text"
                >{{ dish.description }}</textArea
              >
            </div>
            <!--This div is where select for the type is-->
            <div
              class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 btn-group"
            >
              <label for="Type">Tipo de plato:</label>
              <select id="Type" name="type">
                <option id="OptionN" value="Normal">Normal</option>
                <option id="OptionV" value="Vegano">Vegano</option>
                <option id="OptionB" value="Bebida">Bebida</option>
              </select>
            </div>
            <!--This div is where input for the adding new ingredients is-->
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="Ingredients">Ingrediente:</label>
              <div class="form-inline">
                <!--This form will have a button at the end in order to let the user add more than one ingrdient each time-->
                <input
                  id="Ingredient"
                  class="form-control col-xs-11 col-sm-11 col-md-11 col-lg-11"
                  type="text"
                />
                <input
                  id="IngredientButton"
                  class="form-control col-xs-1 col-sm-1 col-md-1 col-lg-1"
                  type="button"
                  onclick="addNewIngredient()"
                  value="Añadir"
                />
              </div>
            </div>
          </div>
        </div>
        <!--This div is where cancel and save buttons are-->
        <div class="row">
          <div class="formButtonContainer col-xs-1">
            <input id="FormSaveButton" class="formButton" type="button" onclick="validate()" value="Guardar" />
          </div>
          <div class="formButtonContainer col-xs-1">
            <!--This will cancel the operation and back you to the menu-->
            <input
              id="formCancelButton"
              type="button"
              class="formButton"
              onclick="window.location.href='/menu/{{dish.type}}'"
              value="Cancelar"
            />
          </div>
        </div>
        <!--This div is where ingredients list title is-->
        <div id="IngredientListTitle">
          <h2>Lista de ingredientes</h2>
        </div>
        <!--This div is where ingredients list is-->
        <div
          id="IngredientsList"
          class="col-xs-12 col-sm-12 col-md-12 col-lg-12"
        >
          <!--This is to shown the ingredients list-->
          {{#ingredients}}
          <div id="Ingredient{{ actualIndex }}" class="form-inline">
            <input
              id="IngredientText{{ actualIndex }}"
              class="ingredientsStructure form-control col-xs-11 col-sm-11 col-md-11 col-lg-11"
              name="ingredient"
              type="text"
              value="{{ ingredient }}"
            />
            <input
              class="ingredientsStructureButton form-control col-xs-1 col-sm-1 col-md-1 col-lg-1"
              type="button"
              onclick="deleteIngredient('{{ increaseIndex }}')"
              value="Eliminar"
            />
          </div>
          {{/ingredients}}
          {{^ingredients}}
          <p>No hay ingredientes</p>
          {{/ingredients}}
        </div>
      </form>
    </div>
