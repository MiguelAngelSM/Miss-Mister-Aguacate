  <body>
    <div id="Header" class="row">
        <div id="Restaurant_Name" class="col-xs-6">
        <h1>Miss & Mister Aguacate</h1>
        <!--Restaurant Name-->
        </div>

        <div class="flex-gap">
            <div id="Insta" class="col-xs-2">
                <a href="https://www.instagram.com/" target="_blank">
                <img class="Social img-responsive" src="../../Iconos/insta.png" />
                <!--Link to Instagram-->
                </a>
            </div>
            <div id="Facebook" class="col-xs-2">
                <a href="https://es-es.facebook.com/" target="_blank">
                <img class="Social img-responsive" src="../../Iconos/facebook.png" />
                <!--Link to Facebook-->
                </a>
            </div>
            <div id="Twitter" class="col-xs-2">
                <a href="https://twitter.com/?lang=es" target="_blank">
                <img class="Social img-responsive" src="../../Iconos/twitter.png" />
                <!--Link to Twitter-->
                </a>
            </div>
        </div>
    </div>
    <!--Header from the page-->

    <div id="Form" class="container-fluid">
        <div class="FormStructure row">
          <div id="FormPhoto" class="col-xs-2">
            <!--This input is for the new dish option in order to let the user get an image from its own desktop-->
            <input id="AddImage" type="file" style="display: none" />

            <!--This image is for the modify dish option in order to print the image from the dish that is being modified-->
            <img
              id="FormImage"
              class="dish-image img-responsive"
              src="../../{{dish.img}}"
            />
          </div>

          <div id="BasicForm" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <form role="form">
              <div class="form-group col-xs-11 col-sm-11 col-md-11 col-lg-11">
                <label for="Name">Nombre:</label>
                <input id="Name" class="form-control" type="text" value="{{dish.name}}" />
              </div>
              <div class="form-group col-xs-11 col-sm-11 col-md-11 col-lg-11">
                <label for="Price">Precio:</label>
                <input id="Price" class="form-control" type="text" value="{{dish.price}}" />
              </div>
              <div class="form-group col-xs-11 col-sm-11 col-md-11 col-lg-11">
                <label for="Description">Descripción:</label>
                <input id="Description" class="form-control" type="text" value="{{dish.description}}" />
              </div>
              <div class="form-group col-xs-11 col-sm-11 col-md-11 col-lg-11">
                <label for="Ingredients">Ingrediente:</label>
                <div class="form-inline">
                  <!--This form will have a button at the end in order to let the user add more than one ingrdient each time-->
                  <input
                    id="Ingredient"
                    class="form-control col-xs-11 col-sm-11 col-md-11 col-lg-11"
                    type="text"
                  />
                  <input
                    id="IngredientButton"
                    class="form-control col-xs-1 col-sm-1 col-md-1 col-lg-1"
                    type="button"
                    onclick="addNewIngredient()"
                    value="Añadir"
                  />
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="row">
          <div class="FormButtons col-xs-1">
            <button id="formSaveButton" onclick="saveDish('N')">Guardar</button>
          </div>
          <div class="FormButtons col-xs-1">
            <!--This will cancel the operation and back you to the menu-->
            <button id="formCancelButton" onclick="backButton('N')">
              Cancelar
            </button>
          </div>
        </div>

        <div id="IngredientListTitle">
          <h2>Lista de ingredientes</h2>
        </div>
        <div
          id="IngredientsList"
          class="col-xs-12 col-sm-12 col-md-12 col-lg-12"
        >
          {{#ingredients}}
            <div class="form-inline">
              <input class="IngredientsStructure form-control col-xs-11 col-sm-11 col-md-11 col-lg-11" type="text" value="{{.}}"/>
              <input class="IngredientsStructureButton form-control col-xs-1 col-sm-1 col-md-1 col-lg-1" type="button" value="Eliminar"/>
            </div>
          {{/ingredients}}
          {{^ingredients}}
          <p>No hay ingredientes</p>
          {{/ingredients}}
          <!--The list will be generated by JS-->
        </div>
      </div>
      <!--Modify and create form page-->


    <div id="Footer" class="row">
        <div id="ContactInfo" class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <p><img src="../../Iconos/Reloj.png" /> Horario: Lunes a Viernes 12:00 - 01:00</p>
            <p><img src="../../Iconos/Correo.png" /> Contacto: missandmisteraguacate@gmail.com</p>
            <p><img src="../../Iconos/Telefono.png" /> Teléfono: +34 910 00 00 00</p>
            <p><img src="../../Iconos/Mapa.png" /> Calle: Las Antenas, 21 45631</p>
          </div>
    
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
