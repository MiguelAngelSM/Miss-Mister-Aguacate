<!--Text got with ajax-->
{{#dishes}}
<div class="row dish {{ type }}">
  <div id="Image{{id}}" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <img src="../{{ img }}" class="dish-image img-responsive">
  </div>
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <div class="row">
      <div id="Name{{id}}" class="col-xs-8 col-sm-8 col-md-8 col-lg-8 dishProperties">
        {{ name }}
      </div>
      <div id="Price{{id}}" class="col-xs-4 col-sm-4 col-md-4 col-lg-4 dishProperties">
        {{ price }}€
      </div>
    </div>
    <div class="row">
      <div id="Info{{id}}" class="showInfo col-12">
        <button class="infoButton" onclick="window.location.href='/infoDish/{{ id }}?type={{type}}'">
          Más Info
        </button>
      </div>
    </div>
  </div>
</div>
{{/dishes}}
{{^dishes}}
<h3>No hay más platos</h3>
{{/dishes}}
